<div class="row">
	<div class="col-lg-8 col-lg-offset-2">
		{{&breadcrumb}}
	</div>
</div>
<div class="row">
	<div class="col-lg-8 col-lg-offset-2">
		<div class="panel panel-primary">
			<!-- Default panel contents -->
			<div class="panel-heading">Edit reply</div>
			<div class="panel-body">
				<form action="{{submit_link}}" method="post" class="form-horizontal">
					<input type="hidden" name="csrf" value="{{csrf}}" />
					<div class="form-group">
						<label for="input-topic-content" class="col-lg-2 control-label">Content</label>
						<div class="col-lg-8">
							<textarea name="content" id="input-topic-content" class="form-control" rows="5">{{reply.content}}</textarea>
						</div>
					</div>
					<div class="form-group">
						<div class="col-lg-8 col-lg-offset-2">
							<input type="submit" value="Edit" class="btn btn-success">
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>