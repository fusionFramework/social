<div class="row">
	<div class="col-lg-8 col-lg-offset-2">
		{{&breadcrumb}}
	</div>
</div>
<div class="row">
	<div class="col-lg-8 col-lg-offset-2">
		<div class="panel panel-primary">
			<!-- Default panel contents -->
			<div class="panel-heading">Topic</div>
			<table class="table">
			{{#replies}}
				<tr>
					<td class="text-center col-lg-3">
						<a href="{{author_profile}}">{{author}}</a>
					</td>
					<td class="col-lg-9">
						<div class="row">
							<div class="col-lg-5">
								{{#edit}}<a href="{{edit_link}}" class="btn btn-xs btn-warning">Edit</a>{{/edit}}
								{{#delete}}<a href="{{delete_link}}" data-confirm="{{delete_type}}" class="confirm btn btn-xs btn-danger">Delete</a>{{/delete}}
							</div>
							<div class="col-lg-0 text-right">
								<i><small class="text-muted">{{date}}</small></i> &nbsp;&nbsp;
							</div>
						</div>
						<hr style="margin-top: 3px; margin-bottom: 5px;" />
						{{&content}}
						<br />&nbsp;
					</td>
				</tr>
			{{/replies}}
			</table>
			<div class="panel-footer">
				<div class="row">
				<div class="col-lg-4" style="margin-top: -20px; margin-bottom: -25px">
					{{&pagination}}
				</div>
				<div class="col-lg-0 text-right">
					{{#can_reply}}
					<a href="{{create_reply}}" id="forum-reply" class="btn btn-success btn-sm">
						<i class="icon-plus-sign"></i> Reply
					</a> &nbsp;
					{{/can_reply}}
				</div>
				</div>
			</div>
		</div>
	</div>
</div>

