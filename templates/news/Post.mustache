<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading"><i class="pull-right">{{post.created_at}}</i> {{post.title}}</div>
  <div class="panel-body">
    {{&post.content}}
  </div>
</div>

<div class="text-center">
	{{&pagination}}
</div>

{{#replies}}
	<div class="row">
		<div class="col-md-6 col-md-offset-3 news-comment" data-id="{{id}}">
			<span class="pull-right"><a href="{{link}}">{{user}}</a></span> <i>{{date}}</i>
			<p>{{&content}}</p>
		</div>
	</div>
{{/replies}}
{{^replies}}
	<div class="row">
    	<div class="col-md-6 col-md-offset-3">
    		<p class="muted text-center"><i>There are no replies yet.</i></p>
    	</div>
    </div>
{{/replies}}
{{#make_comment}}
<div class="row">
   	<div class="col-md-4 col-md-offset-4">
   		<form action="{{comment_link}}" class="form-horizontal" method="post">
   		    <input type="hidden" name="csrf" value="{{csrf}}" />
			<div class="form-group">
                <label for="input-news-message" class="col-lg-2 control-label">Reply</label>
                <div class="col-lg-10">
                    <textarea id="input-news-message" class="form-control" name="content"></textarea>
                </div>
              </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                  <button type="submit" class="btn btn-primary">Comment</button>
                </div>
              </div>
   		</form>
  	</div>
</div>
{{/make_comment}}
<div class="text-center">
	{{&pagination}}
</div>